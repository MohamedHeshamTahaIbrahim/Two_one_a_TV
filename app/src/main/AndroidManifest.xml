<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.UI" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".ShareActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_share" >
        </activity>
        <activity
            android:name=".Programs"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_programs" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OutsideProgram"
            android:label="@string/title_activity_outside_program" >
        </activity>
        <activity
            android:name=".WeAndWorldProgram"
            android:label="@string/title_activity_we_and_world" >
        </activity>
        <activity
            android:name=".GameProgram"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".GovernmentProgram"
            android:label="@string/title_activity_government" >
        </activity>
        <activity
            android:name=".FanProgram"
            android:label="@string/title_activity_fan" >
        </activity>
        <activity
            android:name=".MeragePrograms"
            android:label="@string/title_activity_merage_programs" >
        </activity>
        <activity
            android:name=".MorningProgram"
            android:label="@string/title_activity_morning" >
        </activity>
        <activity
            android:name=".NewsProgram"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name=".CountriesProgram"
            android:label="@string/title_activity_countries" >
        </activity>
        <activity
            android:name=".EveProgram"
            android:label="@string/title_activity_eve" >
        </activity>
    </application>

</manifest>
